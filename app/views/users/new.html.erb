<h2 class="blog-post-title">Регистрация</h2>

<%= form_for(@user) do  |f| %>
  <div>
    <%#= render  'shared/error_messages' %>
  </div>

  <div>
    <%= f.label :name %>
    <%= f.text_field  :name %>
  </div>

  <div>
    <%= f.label :email  %>
    <%= f.text_field  :email  %>
  </div>

  <div>
    <%= f.label :diary_name  %>
    <%= f.text_field  :diary_name  %>   
  </div>   

  <div>
    <%= f.label :gender  %>
    <%#= f.select(:gender_name) %>
    <%= f.select :gender_id,  User::GENDER_TYPES %>
  </div>    

  <div>
    <%= f.label :phone  %>
    <%= f.text_field  :phone  %>   
  </div> 

  <div>
    <%= f.label :skype  %>
    <%= f.text_field  :skype  %>   
  </div> 

  <div>
    <%= f.label :info  %>
    <%= f.text_area  :info, cols: 30, rows: 10 %>   
  </div>       

  <div>
    <%= f.label :password %>
    <%= f.password_field  :password %>
  </div>

  <div>
    <%= f.label :password_confirmation, "Confirmation"  %>
    <%= f.password_field  :password_confirmation  %>
  </div>

  <div>
    <%= f.submit  "Зарегистрироваться", class:  ""  %>
  </div>
<%  end %>