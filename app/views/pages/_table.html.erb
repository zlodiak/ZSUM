<div  class="row">
  <table>
    <thead>
      <tr>
        <th>
          <div class="col-xs-6">diary_name</div>
          <div class="col-xs-3">created_date</div>
          <div class="col-xs-3">updated_date</div>
        </th>    
      </tr>    
    </thead>

    <% @diaries.each do |diary| %>
      <tr>
        <td>
          <%= link_to user_posts_url(diary.id) do %>
            <div class="col-xs-6"><%= diary.diary_name %></div>
            <div class="col-xs-3"><%= l diary.created_at, format: "%e %b %Y" %></div>
            <div class="col-xs-3"><%= l diary.updated_at, format: "%e %b %Y" %></div>
          <% end %>  
        </td>
      </tr>
    <% end %>      
  </table>
</div>