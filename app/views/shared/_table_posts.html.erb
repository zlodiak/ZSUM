<div class="row">
  <% @posts.each do |post| %>
    <article class="article blog_teaser">
      <h3 class="col-xs-10 h3"><%= post.title %></h3>
      <div class="col-xs-2 h3">
        <% if signed_in? && current_user.admin? %>
          <%= link_to '', user_post_path(post.user_id, post.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-remove pull-right" %>
          <%= link_to '', edit_user_post_path(post.user_id, post.id), class: 'glyphicon glyphicon-edit pull-right' %>
        <% end %>
      </div>

      <div class="col-xs-12 meta">
        <span class="create_date"><%= l post.created_at, format: "%e %b %Y, %H:%I" %></span>
        <span class="author">Автор: <%= link_to post.user.name, user_path(post.user_id) %></span>
        <span class="views">Просмотров: <%= post.views %></span>        
      </div>

      <div class="col-xs-12 body">
        <%= link_to truncate(post.body, length: 200), user_post_path(post.user_id, post.id) %>
      </div>
    </article> 
  <% end %>      
</div>

<%= will_paginate @posts %>