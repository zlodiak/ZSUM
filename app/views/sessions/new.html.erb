<h1><%= t("sign_in") %></h1>

<div  class="row">
  <div  class="col-md-6 col-md-offset-3">
    <%= form_for(:session,  url:  sessions_path)  do  |f| %>
      <%= f.label t(:email)  %>
      <%= f.text_field  :email  %>

      <%= f.label t(:password) %>
      <%= f.password_field  :password %>

      <%= f.submit  t("sign_in"),  class:  "btn  btn-primary"  %>
    <%  end %>
    
    <p><%= link_to t('sign_up'),  signup_path %></p>
  </div>
</div>