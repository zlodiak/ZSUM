<div class="col-xs-12 guestbook_form">
  <%= form_for(@guestbook) do |f| %>
    <div class="row hide">
      <div class="col-xs-12">
        <%  if  @guestbook.errors.any? %>
          <div  id="error_explanation">
            <div  class="alert  alert-danger">Форма содержит <%= pluralize(@guestbook.errors.count, "error")  %>.</div>

            <ul>
              <%  @guestbook.errors.full_messages.each do  |msg| %>
                <li><%= msg %></li>
              <%  end %>
            </ul>
          </div>
        <%  end %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-2">
        <%= f.label :name if !signed_in? %>
      </div>
      <div class="col-xs-12 col-sm-10">
        <% if signed_in? %>
          <%= f.text_field :name, value: current_user.name, class: 'hide' %>
        <% else %>
          <%= f.text_field :name %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-2">
        <%= f.label :message %>
      </div>
      <div class="col-xs-12 col-sm-10">
        <%= f.text_area :message %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
