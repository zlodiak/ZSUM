<%= form_for [@user, @post] do |f| %>
  <div class="row">
    <%#= render  'shared/error_messages' %>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-2">
      <%= f.label :title %>
    </div>

    <div class="col-xs-12 col-sm-10">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-2">
      <%= f.label :body %>
    </div>

    <div class="col-xs-12 col-sm-10">
      <%= f.text_area :body %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= f.submit %>
    </div>
  </div>
<% end %>
