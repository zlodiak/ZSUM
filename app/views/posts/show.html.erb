<div class="row">
    <article class="article blog_post">
      <h2 class="blog-post-title col-xs-10 h2"><%= @post.title %></h2>
      <div class="col-xs-2 h3">
        <% if signed_in? && current_user.admin? %>
          <%= link_to '', user_post_path(@user, @post), method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-remove pull-right" %>
          <%= link_to '', edit_user_post_path(@user, @post), class: 'glyphicon glyphicon-edit pull-right' %>
        <% end %>
      </div>

      <div class="col-xs-12 meta">
        <span class="create_date">Дата создания: <%= l @post.created_at, format: "%e %b %Y, %H:%I" %></span>
        <span class="update_date">Дата изменения: <%= l @post.updated_at, format: "%e %b %Y, %H:%I" %></span>
        <span class="author">Автор: <%= link_to @user.name, user_path(@user) %></span>
        <span class="views">Просмотров: <%= @post.views %></span>
      </div>

      <div class="col-xs-12 body">
        <%= @post.body %>
      </div>
    </article>      
</div>





