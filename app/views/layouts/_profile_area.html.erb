<div class="row">   
  <div class="col-xs-6 col-sm-12">   
    <% if current_user.avatar_file_name %>
      <%= image_tag(current_user.avatar.url, class: "img-responsive pull-left thumb_icon", alt: '') %>
    <% else %>
      <%= image_tag('/images/no-user-image.gif', class: "img-responsive pull-left thumb_icon", alt: '') %>
    <% end %>            
  </div>

  <div class="col-xs-6 col-sm-12">  
    <%= render 'layouts/nav_user' %>
  </div>
</div>
